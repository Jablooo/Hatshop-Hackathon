<div class="logo_box mx-auto">
  <%= image_tag("mad-hattr-logo.png", class: "logo_home") %>
</div>

<div class="card mx-auto col-10 col-sm-6">
  <div class="card-body card_field">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, placeholder: "Email address", class: "text_fields" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "text_fields" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="footer_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div> <!-- card container -->
