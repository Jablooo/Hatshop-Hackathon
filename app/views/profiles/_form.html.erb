
<div class="card mx-auto col-10">
  <div class="card-body card_field">

    <%= form_with(model: profile, url: profiles_path, local: true) do |form| %>
      <% if profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
          <% profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :avatar %>
        <%= form.file_field :avatar, id: :profile_avatar_data %>
      </div>

      <div class="field">
        <%= form.label :username %>
        <%= form.text_field :username, id: :profile_username %>
      </div>

      <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :profile_first_name %>
      </div>

      <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :profile_last_name %>
      </div>

      <div class="field">
        <%= form.label :address %>
        <%= form.text_field :address, id: :profile_address %>
      </div>

      <div class="field">
        <%= form.label :postcode %>
        <%= form.text_field :postcode, id: :profile_postcode %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, id: :profile_city %>
      </div>

      <div class="field">
        <%= form.label :country %>
        <%= form.text_field :country, id: :profile_country %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
