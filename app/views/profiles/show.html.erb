<%= render "home/nav" %>
<%= link_to image_tag("icon_back.png", class: "back-icon"), 'javascript:history.go(-1);', class: "nav-link" %>

<p id="notice"><%= notice %></p>


<div class="container profile_box">
  <div class="row">
    <div class= "col-5">
      <%= image_tag @profile.avatar_url, :class => 'profile_avatar' %>

    </div>

    <div class="col-7">
      <p class="profile_username"><%= @profile.username %></p>
      <p class="profile_name"><%= @profile.first_name + " " + @profile.last_name %></p>
      <p class="profile_bio"><%=  @profile.address  + " " + @profile.postcode + " " + @profile.city  + " " + @profile.country %></p>
        <% if @profile.user == current_user %>
            <%= link_to 'Edit Profile', edit_profiles_path, class: "btn btn-outline-dark" %>
        <% end %>
    </div>


    <div class="col-12">
    </div>

  </div>
</div>


<div class="container user_photo_feed">
    <div class="row justify-content-start">
      <% @profile.user.items.reverse.each do |item| %>

      <div class="col-6 col-sm-4">
          <div class="card items_card">
            <div class="card-body text_box">
              <%= link_to (image_tag (item.image_url(:angle=>"exif", :gravity=>"auto", :height=>500, :width=>500, :crop=>"fill")), :class => 'card-img-top feed_grid'), item_path(item.id) %>
              <p class="card-text"><span class="item_name"><%= item.name %></span></p>
              <p class="card-text"><span class="item_price">$ <%= item.price %></span></p>
            </div>
          </div>
      </div>

      <% end %>
    </div>
</div>



<%= link_to 'Edit', edit_profiles_path %>
<%= link_to 'Back', root_path %>
<br>
